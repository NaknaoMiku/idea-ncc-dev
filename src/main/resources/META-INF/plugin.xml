<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.lijiahaosummer.nccdev</id>
    <version>1.0.7</version>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>NCC Develop Tool</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="lijiahaosummer@gmail.com">yonyou</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description>
        <![CDATA[
		YonYou NC Cloud Secondary development tools
		<ul>
            <li>Support NCC1909.</li>
            <li>Support NCC2005.</li>
            <li>Support NCC2105.</li>
            <li>Support NCC2111.</li>
		</ul>
	]]>
    </description>

    <change-notes><![CDATA[
      <h3>1.0.7</h3>
      <ul>
          <li>1. Add clear text display function of data source password</li>
          <li>2. Add the deployment option when exporting patches</li>
      </ul>

      <h3>1.0.6</h3>
      <ul>
          <li>1. Repair the read data source error</li>
      </ul>

      <h3>1.0.5</h3>
      <ul>
          <li>1. New OpenApi test function</li>
      </ul>

      <h3>1.0.4</h3>
      <ul>
          <li>1. Add the function of opening NC Home</li>
          <li>2. Add the function of opening NC configuration</li>
          <li>3. Add the function of opening Developing communities(https://nccdev.yonyou.com/index)</li>
          <li>4. Compatible IntelliJ IDEA 2022.2.2</li>
      </ul>

      <h3>1.0.3</h3>
      <ul>
          <li>1. Adjust the api used by plug-ins to avoid incompatibility of new version development tools</li>
          <li>2. When exporting patches, check Include Source Code by defaul</li>
          <li>3. Support copying resource files (*. properties) to home</li>
          <li>4. Fix the plug-in error in some cases</li>
      </ul>
    ]]>
    </change-notes>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="ncc-dev-tools-bmonkeyk" displayType="BALLOON"/>
        <moduleType id="NCCMODULE" implementationClass="com.summer.lijiahao.nccdevtool.module.NCCModuleType"/>
        <projectService
                serviceImplementation="com.summer.lijiahao.nccdevtool.devconfig.service.NCCloudEnvSettingService"/>

        <projectService serviceImplementation="com.summer.lijiahao.nccdevtool.opanapi.service.OpenApiConfigService"/>
        <toolWindow id="OpenApi Tool" secondary="false" anchor="right" icon="AllIcons.Debugger.Overhead"
                    factoryClass="com.summer.lijiahao.nccdevtool.opanapi.OpenApiToolWin"/>
    </extensions>

    <actions>

        <action id="dev.module.conver" class="com.summer.lijiahao.nccdevtool.module.action.ConvertModuleAction"
                text="转为ncc模块"
                description="转为ncc模块" icon="AllIcons.Actions.ModuleDirectory">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>

        <action id="dev.module.newmodule" class="com.summer.lijiahao.nccdevtool.module.action.CreateNewNCModuleAction"
                text="新建ncc模块"
                description="新建ncc模块" icon="AllIcons.Actions.ModuleDirectory">
            <add-to-group group-id="NewGroup" relative-to-action="NewModule" anchor="before"/>
        </action>

        <action id="dev.module.newcomponent"
                class="com.summer.lijiahao.nccdevtool.component.action.CreateNCComponentAction"
                text="新建ncc组件"
                description="新建ncc组件" icon="AllIcons.Actions.ModuleDirectory">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
            <add-to-group group-id="NewGroup" relative-to-action="NewModule" anchor="before"/>
        </action>

        <action id="dev.extend.copy" class="com.summer.lijiahao.nccdevtool.extend.action.CopyExtendFileToHomeAction"
                text="复制鉴权文件到nchome"
                description="复制鉴权文件到nchome">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
        <action id="copy.upm.copy" class="com.summer.lijiahao.nccdevtool.extend.action.CopyUpmFileToHomeAction"
                text="复制upm文件到nchome"
                description="复制upm文件到nchome">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
        <action id="dev.resources.copy"
                class="com.summer.lijiahao.nccdevtool.extend.action.CopyResourcesFileToHomeAction"
                text="复制resources文件到home" description="复制resources文件到home">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>

        <action id="dev.set.libraries" class="com.summer.lijiahao.nccdevtool.extend.action.LibrariesSetAction"
                popup="true"
                text="设置nc类路径" description="设置nc类路径">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>

        <action id="dev.application.server.create" class="com.summer.lijiahao.nccdevtool.debug.action.NewServerApplicationAction"
                text="Server Application" description="Server application"/>
        <action id="dev.application.client.create" class="com.summer.lijiahao.nccdevtool.debug.action.NewClientApplicationAction"
                text="Client Application" description="Client application"/>

        <group id="dev.debug" text="调试..." popup="true" description="调试..."
               class="com.summer.lijiahao.nccdevtool.debug.action.AppGroupAction">
            <reference id="dev.application.server.create"/>
<!--            <reference id="dev.application.client.create"/>-->
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </group>

        <action id="dev.config" class="com.summer.lijiahao.nccdevtool.devconfig.ui.NCCloudDevConfigAction" popup="true"
                text="开发配置"
                description="开发配置" icon="AllIcons.Actions.Colors">
            <!--添加到tool菜单显示-->
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>

        <action id="dev.patcher.export" class="com.summer.lijiahao.nccdevtool.patch.action.BuildPatcherAction"
                text="导出NCC补丁"
                description="导出NMC格式补丁">
            <add-to-group group-id="ChangesViewPopupMenu" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
            <add-to-group group-id="Vcs.Log.ChangesBrowser.Popup" anchor="last"/>
        </action>

        <action id="dev.openHome" class="com.summer.lijiahao.nccdevtool.menu.action.OpenNCHomeAction" text="Home"
                description="Home"/>
        <action id="dev.openConfig" class="com.summer.lijiahao.nccdevtool.menu.action.OpenNCConfigAction" text="NC配置"
                description="NC配置"/>
        <action id="dev.dictionary" class="com.summer.lijiahao.nccdevtool.menu.action.OpenDictionaryAction" text="数据字典"
                description="数据字典"/>
        <action id="dev.openNccdev" class="com.summer.lijiahao.nccdevtool.menu.action.OpenNccdevAction" text="开发者社区"
                description="开发者社区"/>
        <action id="dev.openapi" class="com.summer.lijiahao.nccdevtool.menu.action.OpenApiAction" text="OpenApi文档"
                description="OpenApi文档"/>
        <action id="dev.useHelp" class="com.summer.lijiahao.nccdevtool.menu.action.OpenUseHelpAction" text="使用帮助"
                description="使用帮助"/>

        <group id="DevTools" text="集成配置" popup="true">
            <reference id="dev.openHome"/>
            <reference id="dev.openConfig"/>
            <reference id="dev.dictionary"/>
            <reference id="dev.openNccdev"/>
            <reference id="dev.openapi"/>
            <reference id="dev.useHelp"/>
            <add-to-group group-id="MainMenu" anchor="before" relative-to-action="HelpMenu"/>
        </group>
    </actions>
</idea-plugin>